{
    "name": "tomasvotruba/lines",
    "description": "Measuring the size of PHP project",
    "license": "MIT",
    "bin": [
        "bin/lines",
        "bin/lines.php"
    ],
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "phpunit/php-file-iterator": "^4.0",
        "webmozart/assert": "^1.11",
        "symfony/console": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.2",
        "rector/rector": "^0.17.7",
        "phpstan/phpstan": "^1.10",
        "symplify/easy-coding-standard": "^12.0",
        "tracy/tracy": "^2.10",
        "tomasvotruba/class-leak": "0.1.1.72",
        "tomasvotruba/unused-public": "^0.2.0",
        "tomasvotruba/type-coverage": "^0.2.0",
        "phpstan/extension-installer": "^1.3"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\Lines\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomasVotruba\\Lines\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "phpstan": "vendor/bin/phpstan analyze --ansi",
        "rector": "vendor/bin/rector --dry-run --ansi"
    },
    "config": {
        "platform-check": false,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
