{
    "name": "tomasvotruba/lines",
    "description": "Measuring the size of PHP project and its PHP features",
    "license": "MIT",
    "bin": [
        "bin/lines",
        "bin/lines.php"
    ],
    "require": {
        "php": "^8.3",
        "symfony/polyfill-intl-grapheme": "^1.0",
        "symfony/console": "^6.4",
        "symfony/finder": "^6.4",
        "webmozart/assert": "^1.12",
        "nikic/php-parser": "^5.7",
        "sebastian/lines-of-code": "^4.0",
        "nunomaduro/termwind": "^1.17|^2.3",
        "entropy/entropy": "dev-main"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "rector/rector": "^2.2",
        "phpstan/phpstan": "^2.1",
        "phpecs/phpecs": "^2.2",
        "tracy/tracy": "^2.11",
        "tomasvotruba/class-leak": "^2.1",
        "phpstan/extension-installer": "^1.4",
        "symplify/phpstan-rules": "^14.9",
        "rector/type-perfect": "^2.1",
        "symplify/phpstan-extensions": "^12.0",
        "tomasvotruba/unused-public": "^2.1",
        "rector/jack": "^0.4.0"
    },
    "autoload": {
        "psr-4": {
            "TomasVotruba\\Lines\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TomasVotruba\\Lines\\Tests\\": "tests"
        }
    },
    "scripts": {
        "check-cs": "vendor/bin/ecs check --ansi",
        "fix-cs": "vendor/bin/ecs check --fix --ansi",
        "phpstan": "vendor/bin/phpstan analyze --ansi",
        "rector": "vendor/bin/rector --dry-run --ansi"
    },
    "replace": {
        "symfony/polyfill-ctype": "*"
    },
    "config": {
        "platform-check": false,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
